
#!/bin/bash

# Download and install VS Code server
CODE_VERSION=4.7.1
wget -q -O code-server.tar.gz https://github.com/coder/code-server/releases/download/v$CODE_VERSION/code-server_${CODE_VERSION}_amd64.deb
tar xzf code-server.tar.gz
mkdir -p ~/.local/bin
mv code-server${CODE_VERSON}-linux-x64/code-server ~/.local/bin/
rm -rf code-server${CODE_VERSON}-linux-x64 code-server.tar.gz

# Enable the proxy extension in notebook and lab
python3 -m pip install jupyter-server-proxy
python3 -m pip install jupyter-vscode-proxy
